<% include ../partials/header %>
	<div class="row">
		<div class="content-header clearfix">
			<h4 class="col-md-12">Editar item</h4>
		</div><!-- .content-header -->

		<div class="col-md-12">
			<form action="/item/editar" method="post">
				<input class="form-control" name="id" type="hidden" value="<%= item.id %>">
				<p class="text-muted"><%= ('achados-e-perdidos' === item.type) ? 'Achados e perdidos' : 'Almoxarifado' %></p>
				<% if ('achados-e-perdidos' === item.type) { %>
					<fieldset class="form-group">
						<label for="status">Status</label>
						<select id="status" class="form-control" name="status">
							<option value="Encontrado" <%= ('Encontrado' === item.status) ? 'selected' : '' %>>Encontrado</option>
							<option value="Devolvido" <%= ('Devolvido' === item.status) ? 'selected' : '' %>>Devolvido</option>
						</select>
					</fieldset>
				<% } %>
				<fieldset class="form-group">
					<label for="description">Descrição</label>
					<input id="description" class="form-control" name="description" type="text" value="<%= item.description || '' %>">
				</fieldset>
				<fieldset class="form-group">
					<label for="comment">Comentário</label>
					<textarea id="comment" class="form-control" name="comment" rows="3"><%= item.comment %></textarea>
				</fieldset>
				<fieldset class="form-group">
					<label for="amount">Quantidade</label>
					<input id="amount" class="form-control" name="amount" type="number" value="<%= item.amount || 0 %>" min="0">
				</fieldset>
				<br>
				<button class="btn btn-success" type="submit">Salvar</button>
			</form>
		</div><!-- .col -->
	</div><!-- .row -->
<% include ../partials/footer %>
