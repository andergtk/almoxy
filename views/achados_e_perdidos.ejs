<div class="card">
	<h5 class="card-header">Achados e Perdidos</h5>
	<% if (itensAchadosEPerdidos.length) { %>
		<table class="table table-bordered table-hover">
			<thead>
				<tr>
					<th style="width: 50px; text-align: center;"><input type="checkbox"></th>
					<th>Descrição</th>
					<th style="width: 200px;">Comentário</th>
					<th style="width: 120px; text-align: center;">Ações</th>
				</tr>
			</thead>
			<tbody>
				<% itensAchadosEPerdidos.forEach(function(item) { %>
					<tr data-item-id="<%= item.id %>">
						<td style="text-align: center;"><input type="checkbox"></td>
						<td class="item-descricao"><%= item.descricao %></td>
						<td><%= item.comentario %></td>
						<td style="text-align: center;">
							<button class="btn btn-secondary btn-sm item-update" data-item-id="<%= item.id %>">
								<span class="octicon octicon-pencil"></span>
							</button>
							<button class="btn btn-secondary btn-sm item-remove" data-item-id="<%= item.id %>">
								<span class="octicon octicon-trashcan"></span>
							</button>
						</td>
					</tr>
				<% }) %>
			</tbody>
		</table>
	<% } else { %>
		<div class="card-block">
			<p>Nenhum registro encontrado.</p>
		</div>
	<% } %>
</div><!-- achados e perdidos -->
