<% include templates/cabecalho %>
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header">
					<div class="row ">
						<h4 class="col-md-9">Almoxarifado</h4>
						<div class="col-md-3">
							<a class="btn btn-success btn-block" href="/item/criar">Novo item</a>
						</div>
					</div>
				</div>
				<% if (itensAlmoxarifado.length < 1) { %>
					<div class="card-block">
						<p>Nenhum registro encontrado</p>
					</div>
				<% } else { %>
					<table class="table table-bordered table-hover">
						<thead>
							<tr>
								<th style="width: 50px; text-align: center;"><input type="checkbox"></th>
								<th>Descrição</th>
								<th style="width: 100px; text-align: center;">Quantidade</th>
								<th style="width: 120px; text-align: center;">Ações</th>
							</tr>
						</thead>
						<tbody>
							<% itensAlmoxarifado.forEach(function(item) { %>
								<tr data-item-id="<%= item.id %>">
									<td style="text-align: center;"><input type="checkbox"></td>
									<td class="item-descricao"><%= item.descricao %></td>
									<td style="text-align: right;"><%= item.quantidade %></td>
									<td style="text-align: center;">
										<button class="btn btn-secondary btn-sm item-editar">
											<span class="octicon octicon-pencil"></span>
										</button>
										<button class="btn btn-secondary btn-sm item-excluir">
											<span class="octicon octicon-trashcan"></span>
										</button>
									</td>
								</tr>
							<% }); %>
						</tbody>
					</table>
				<% } %>
			</div><!-- .card -->
		</div>
	</div><!-- .row -->
	<% include item/modal-info %>
	<% include item/modal-editar %>
	<% include item/modal-excluir %>
<% include templates/rodape %>
