<% include templates/header %>

	<div class="row">
		<div class="col-md-8">
			<div class="card">
				<h5 class="card-header">Almoxarifado</h5>
				<% if (itensAlmoxarifado.length) { %>
					<table class="table table-bordered table-hover">
						<thead>
							<tr>
								<th style="width: 50px; text-align: center;"><input type="checkbox"></th>
								<th>Descrição</th>
								<th style="width: 100px; text-align: center;">Quantidade</th>
								<th style="width: 120px; text-align: center;">Ações</th>
							</tr>
						</thead>
						<tbody>
							<% itensAlmoxarifado.forEach(function(item) { %>
								<tr data-item-id="<%= item.id %>">
									<td style="text-align: center;"><input type="checkbox"></td>
									<td class="item-descricao"><%= item.descricao %></td>
									<td style="text-align: right;"><%= item.quantidade %></td>
									<td style="text-align: center;">
										<button class="btn btn-secondary btn-sm item-update" data-item-id="<%= item.id %>">
											<span class="octicon octicon-pencil"></span>
										</button>
										<button class="btn btn-secondary btn-sm item-remove" data-item-id="<%= item.id %>">
											<span class="octicon octicon-trashcan"></span>
										</button>
									</td>
								</tr>
							<% }); %>
						</tbody>
					</table>
				<% } else { %>
					<div class="card-block">
						<p>Nenhum registro encontrado.</p>
					</div>
				<% } %>
			</div><!-- almoxarifado -->
		</div>

		<div class="col-md-4">
			<% include templates/novo_item %>
		</div>
	</div>
	<% include templates/modal_item %>
	<% include templates/modal_remove %>

<% include templates/footer %>
